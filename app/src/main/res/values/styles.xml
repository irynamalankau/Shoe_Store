<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Login screen styles-->

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">@dimen/width_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="username_textInputLayout" parent="@style/textInputLayout">
        <item name="android:layout_marginTop">@dimen/margin_24dp</item>
    </style>

    <style name="password_textInputLayout" parent="@style/textInputLayout">
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
    </style>

    <style name="login_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="login_constraint_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_layout_welcome</item>
    </style>

    <style name="btn_login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
        <item name="android:enabled">true</item>
    </style>

    <!-- Welcome screen styles-->

    <style name="text_welcome">
        <item name="android:layout_width">@dimen/width_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_24dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_welcome</item>
    </style>

    <style name="next_btn_welcome">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_32dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_24dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>

    <!-- Instructions screen styles-->

    <style name="text_instructions">
        <item name="android:layout_width">@dimen/width_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_24dp</item>
        <item name="android:layout_marginTop">@dimen/margin_24dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_instructions</item>
    </style>

    <style name="next_btn_instructions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>

    <!-- List item styles-->
    <style name="card_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="icon_item">
        <item name="android:layout_width">@dimen/ic_shoe_width</item>
        <item name="android:layout_height">@dimen/ic_shoe_height</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
    </style>

    <style name="shoe_name_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
    </style>

    <style name="company_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
    </style>

    <style name="size_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
    </style>

    <style name="description_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
    </style>

    <!-- Shoe listing screen styles-->

    <style name="shoe_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_list</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/list_divider</item>
    </style>

    <style name="add_btn_listing">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_16dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:contentDescription">@string/fab_content_desc</item>
    </style>

    <!-- Details screen styles-->

    <style name="save_btn_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_32dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
    </style>

    <style name="cancel_btn_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_32dp</item>
    </style>

</resources>
